@model StayFit.Models.CombinedServiceBookingTimings
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Gym_Member_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ServiceBooking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Combined_serviceBooking.Service, (IEnumerable<SelectListItem>)ViewBag.Service, "--Select Service--", new { @class = "form-control",@id= "xx"})
                @Html.ValidationMessageFor(model => model.Combined_serviceBooking.Service, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Combined_serviceTimings.Timing, new SelectList(" "), "--Select Time--", new { @class = "form-control" , @id = "yy" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Combined_serviceBooking.BookingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Combined_serviceBooking.BookingDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Combined_serviceBooking.BookingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Combined_serviceBooking.BookingStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Combined_serviceBooking.BookingStatus)
                    @Html.ValidationMessageFor(model => model.Combined_serviceBooking.BookingStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(document).ready(function () {
        $("#xx").change(function () {
            var item = this;
            $.get("/ServiceBookings/GetTimings", { Service_Id: item.value }, function (data) {
                $("#yy").empty();
                $.each(data, function (index, row){
                    $("#yy").append("<option value='" + row.Service_Id + "'>" +row.Timing+ "</option>")

                });
            });
        })
    });
</script>[Service_Service_Id]
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
