@model StayFit.Models.ServiceBooking

@{
                /**/

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/Gym_Member_Layout.cshtml";
}

<h2>Create</h2>
<link rel="stylesheet" type="text/css" media="all" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/smoothness/jquery-ui.css" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ServiceBooking</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Service.Service_Id, (IEnumerable<SelectListItem>)ViewBag.Service, "--Select Service--", new { @class = "form-control", @id = "xx" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ServiceTimings.Timing_Id, new SelectList(" "), "--Select Time--", new { @class = "form-control", @id = "yy" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BookingDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookingDate, new { htmlAttributes = new { @class = "form-control date-picker2" } })
                @Html.ValidationMessageFor(model => model.BookingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookingStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.BookingStatus)
                    @Html.ValidationMessageFor(model => model.BookingStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>

    $(document).ready(function () {
        $("#xx").change(function () {
            var item = this;
            $.get("/ServiceBookings/GetTimings", { Timing_Id: item.value }, function (data) {
                $("#yy").empty();
                $.each(data, function (index, row) {
                    $("#yy").append("<option value='" + row.Timing_Id + "'>" + row.Timing + "</option>")

                });
            });
        })
    });
</script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
