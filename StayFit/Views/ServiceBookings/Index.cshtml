@model IEnumerable<StayFit.Models.ServiceBooking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Gym_Member_Layout.cshtml";
}

<div class="well">
    <h1 style="font-size:45px;font-weight:500;font-style:initial;font-family:Georgia; color:#18bc9c"> Your Bookings</h1>
    <hr style="border-top: 1px solid #ccc; background: transparent;">
    <br />

    <table class="table table-striped table-responsive table-hover">
        <thead class="thead-light">
            <tr style="background-color:#18bc9c;height:20px">
                <th>
                    Booking Id
                </th>
                <th>
                    Service Choosen
                </th>
                <th>
                    Booking Date
                </th>
                <th>
                    Scheduled Time
                </th>
                <th>
                    Booking Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Booking_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Service.SeviceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceTimings.Timing)
                    </td>
                    <td>
                        @if (item.BookingStatus == true)
                        {<p>Active</p> }
                        else
                        { <p style="color:brown">Cancelled</p>}

                    </td>
                    <td>
                        @Html.ActionLink("View Details", "Details", new { id = item.Booking_Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
$(document).ready(function () {
$('.table').DataTable();
});
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />
