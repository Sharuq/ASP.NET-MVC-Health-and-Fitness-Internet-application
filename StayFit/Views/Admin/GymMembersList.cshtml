@model IEnumerable<StayFit.Models.GymMember>

@{
    ViewBag.Title = "GymMembersList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1 style="font-size:45px;font-weight:500;font-style:initial;font-family:Georgia; color:#18bc9c"> Gym Members List</h1>
<hr style="border-top: 1px solid #ccc; background: transparent;">

<table class="table table-striped table-responsive table-hover">
    <thead class="thead-light">
        <tr style="background-color:#18bc9c;height:20px">
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @if (item.MembershipType.Equals("2"))
                    {
                        <p>STANDARD: A$50/Month </p>
                    }
                    @if (item.MembershipType.Equals("3"))
                    {
                        <p>  PREMIUM: A$80/Month </p>
                    }
                    @if (item.MembershipType.Equals("4"))
                    {
                        <p> PLATINUM: A$120/Month </p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "GymMemberEdit", new { id = item.Member_Id }) |
                    @Html.ActionLink("Details", "GymMemberDetails", new { id = item.Member_Id }) |
                    @Html.ActionLink("Delete", "GymMemberDelete", new { id = item.Member_Id })
                </td>
            </tr>
        }
    </tbody>
</table>
