@{
    ViewBag.Title = "Home Page";
}
<section class="banner_area img-responsive col-md-12">

    <div class="banner_content text-center">
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        <h6>Be A Part Of StayFit &amp; Be Healthy </h6>
        <h2>BEAT THE CHALLENGES &amp; STAY FIT!</h2>
        <br /><br /><br /><br /><br />
        @Html.ActionLink("Become A Member", "Register", "Account", null, new { @class = "btn theme_btn_two button_hover" })
    </div>


</section>

<!-- Start price Area -->
<section id="pricing" class="price-area pt-100">
    <div class="container">
        <div class="container">
            <div class="row">
                <div class="col-md-11">
                    <!-- Section Title -->
                    <div class="sec-title">
                        <h1 style="font-size:45px;font-weight:500;font-style:initial;font-family:Georgia; color:#18bc9c">Our Membership Prices</h1>
                         <h3 style="font-size:25px; font-weight:400;font-family:Calibri;text-align:justify">Choose the Perfect tier for you. We take each member with whole-heared care to make everyone fit and healthy.</h3>
                    </div>
                    <!-- // End Section Title -->
                </div><!-- // End Col -->
            </div><!-- // End Row -->
            <br>
            <br>
            <br>
        </div><!-- // End Container -->
        <br>

        <div class="row">
            <div class="col-lg-4">
                <div class="single-price">
                    <div class="top-sec d-flex justify-content-between">
                        <div class="top-left">
                            <h2>STANDARD</h2>
                            <h5>For the <br>Standard</h5>
                        </div>
                        <div class="top-right">
                            <h3>A$50/Month</h3>
                        </div>
                    </div>
                    <div class="bottom-sec">
                        <p>
                            Be Fit and Stay Healthy
                        </p>
                    </div>
                    <div class="end-sec">
                        <ul>
                            <li>15 Cardio Classes</li>
                            <li>10 Boxing Classes</li>
                            <li>10 Yoga Classes</li>
                            <li>Group Sessions</li>
                            <li>10 Swiming Pool Access</li>
                        </ul>
                        @Html.ActionLink("Join Now", "Register", "Account", null, new { @class = "btn price-btn mt-20 lnr lnr-arrow-right" })
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="single-price">
                    <div class="top-sec d-flex justify-content-between">
                        <div class="top-left">
                            <h2>PREMIUM</h2>
                            <h5>For the <br>premium</h5>
                        </div>
                        <div class="top-right">
                            <h2>A$80/Month</h2>
                        </div>
                    </div>
                    <div class="bottom-sec">
                        <p>
                            Be Fit and Stay Healthy
                        </p>
                    </div>
                    <div class="end-sec">
                        <ul>
                            <li>20 Cardio Classes</li>
                            <li>20 Boxing Classes</li>
                            <li>20 Yoga Classes</li>
                            <li>Group Sessions and Personal Trainers</li>
                            <li>20 Swiming Pool and Spa Access</li>
                        </ul>

                        @Html.ActionLink("Join Now", "Register", "Account", null, new { @class = "btn price-btn mt-20 lnr lnr-arrow-right" })
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="single-price">
                    <div class="top-sec d-flex justify-content-between">
                        <div class="top-left">
                            <h2>PLATINUM</h2>
                            <h5>For the <br>platinum</h5>
                        </div>
                        <div class="top-right">
                            <h2>A$120/Month</h2>
                        </div>
                    </div>
                    <div class="bottom-sec">
                        <p>
                            Be healthy and stay fit
                        </p>
                    </div>
                    <div class="end-sec">
                        <ul>
                            <li>30 Cardio Classes</li>
                            <li>30 Boxing Classes</li>
                            <li>30 Yoga Classes</li>
                            <li>Group Sessions and Personal Training </li>
                            <li>Unlimited Swiming Pool and Spa Access</li>
                        </ul>
                        @Html.ActionLink("Join Now", "Register", "Account", null, new { @class = "btn price-btn mt-20 lnr lnr-arrow-right" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- End price Area -->
